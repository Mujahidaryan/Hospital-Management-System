<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Patients</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">
  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Patients</h1>

    <form action="/patients" method="POST" class="mb-8 grid gap-4">
      <input name="name" placeholder="Name" class="p-2 border rounded w-full" required />
      <input name="age" type="number" placeholder="Age" class="p-2 border rounded w-full" required />
      <select name="gender" class="p-2 border rounded w-full" required>
        <option value="">Select Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
      <input name="condition" placeholder="Condition" class="p-2 border rounded w-full" required />
      <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Add Patient</button>
    </form>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% patients.forEach(patient => { %>
        <div class="bg-white p-4 rounded shadow">
          <h2 class="text-xl font-semibold"><%= patient.name %></h2>
          <p>Age: <%= patient.age %></p>
          <p>Gender: <%= patient.gender %></p>
          <p>Condition: <%= patient.condition %></p>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
